pkgname=lfm-git
_pkgname=lfm
pkgver=377.d1cd740
pkgrel=1
pkgdesc="terminal file manager"
url="https://github.com/kmarius/lfm"
license=('MIT')
arch=('x86_64' 'aarch64')
depends=('luajit' 'libev' 'lua51-filesystem')
# TODO: ffmpeg is a runtime dependency for notcurses but we shouldn't need it (on 2022-02-12)
makedepends=('git' 'cmake' 'gcc' 'ffmpeg')
optdepends=("trash-cli: trash files")
source=(git+https://github.com/kmarius/lfm)
conflicts=()
md5sums=('SKIP')

pkgver() {
	cd "${_pkgname}"
	echo `git rev-list --count master`.`git rev-parse --short master`
}

build() {
	cd "${_pkgname}"
	cmake -Bbuild -DCMAKE_INSTALL_PREFIX="/usr" -DCMAKE_BUILD_TYPE=Release
	cmake --build build
}

package() {
	cd "${_pkgname}"
	DESTDIR="${pkgdir}" cmake --install build
}
